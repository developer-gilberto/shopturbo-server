generator client {
    provider = "prisma-client-js"
    // output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")
    Shop      Shop[]

    @@map("users")
}

model Shop {
    id                Int                @id
    userId            Int                @map("user_id") // FK
    name              String?
    createdAt         DateTime           @default(now()) @map("created_at")
    updatedAt         DateTime           @updatedAt @map("updated_at")
    ShopeeAccessToken ShopeeAccessToken?
    products Product[]

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@map("shops")
}

model ShopeeAccessToken {
    id           Int      @id @default(autoincrement())
    shopId       Int      @unique @map("shop_id") // FK
    refreshToken String   @unique @map("refresh_token")
    accessToken  String   @map("access_token")
    expireIn     DateTime @map("expire_in")
    createdAt    DateTime @default(now()) @map("created_at")
    updatedAt    DateTime @updatedAt @map("updated_at")

    shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

    @@map("shopee_access_tokens")
}

model Product {
    id               Int      @id
    shopId           Int      @map("shop_id") // FK
    sku              String
    categoryId       Int      @map("category_id")
    name             String
    stock            Int
    sellingPrice     Float    @map("selling_price")
    costPrice        Float    @map("cost_price")
    governmentTaxes  Float    @map("government_taxes")
    imageUrl         String   @map("image_url")
    createdAt        DateTime @default(now()) @map("created_at")
    updatedAt        DateTime @updatedAt @map("updated_at")

    shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

    @@map("products")
}
